layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    
    tab name="Code" focus=true {
        pane split_direction="vertical" {
            pane size="70%" {
                command "nvim"
                // args "."
            }
            pane {
                command "zsh"
            }
        }
    }
    
    tab name="Debug/Test" {
        pane split_direction="vertical" {
            pane size="30%" {
                command "zsh"
            }
            pane {
                command "zsh"
            }
        }
    }
    
    tab name="Deploy" {
        pane split_direction="horizontal" {
            pane size="40%" {
                command "nvim"
                // args "."
            }
            pane size="30%" {
                command "zsh"
            }
            pane {
                command "zsh"
            }
        }
    }
    
    tab name="Notes" {
        pane {
            command "nvim"
            args "~/vaults/LCARS/"
        }
    }

    tab name="Lazygit" {
      pane {
        command "lg"
      }
    }
}
